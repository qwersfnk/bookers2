<div class="container">
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
<div class="form-group">
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前",class:"form-control" %>
</div>
<div class="form-group">
  <label for="inputImage">imege</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*",class:"form-control-file" %>
</div>
<div class="form-group">
  <label for="user_introduction">Introduction</label>
</div>
  <%= f.text_field :introduction,class:"form-control introduction" %>
<div class="form-group">
  <%= f.submit "Update User",class:"btn btn-secondary" %>
</div>
<% end %>
</div>
</div>
</div>
</div>